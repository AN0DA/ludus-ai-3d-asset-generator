# Environment Variables for AI 3D Asset Generator
# Copy this file to .env and fill in your actual values

# Environment Configuration
ENVIRONMENT=development

# LLM Configuration - OpenAI Provider
LLM__PROVIDERS__OPENAI__API_KEY=sk-your-openai-api-key-here
LLM__PROVIDERS__OPENAI__MODEL=gpt-4
LLM__PROVIDERS__OPENAI__BASE_URL=https://api.openai.com/v1

# LLM Configuration - Anthropic Provider
LLM__PROVIDERS__ANTHROPIC__API_KEY=sk-ant-your-anthropic-api-key-here
LLM__PROVIDERS__ANTHROPIC__MODEL=claude-3-sonnet-20240229
LLM__PROVIDERS__ANTHROPIC__BASE_URL=https://api.anthropic.com

# LLM Configuration - Ollama Provider (local)
LLM__PROVIDERS__OLLAMA__MODEL=llama2
LLM__PROVIDERS__OLLAMA__BASE_URL=http://localhost:11434

# LLM Configuration - Custom OpenAI-compatible Provider
# LLM__PROVIDERS__CUSTOM__API_KEY=your-custom-api-key
# LLM__PROVIDERS__CUSTOM__MODEL=your-model-name
# LLM__PROVIDERS__CUSTOM__BASE_URL=https://your-provider.com/v1

# LLM Provider Selection
LLM__PRIMARY_PROVIDER=openai
LLM__FALLBACK_PROVIDER=anthropic

# Object Storage Configuration
OBJECT_STORAGE__PROVIDER=aws  # aws, minio, r2, wasabi, custom
OBJECT_STORAGE__ACCESS_KEY_ID=your-access-key-id
OBJECT_STORAGE__SECRET_ACCESS_KEY=your-secret-access-key
OBJECT_STORAGE__REGION=us-east-1
OBJECT_STORAGE__BUCKET_NAME=your-bucket-name
OBJECT_STORAGE__BUCKET_PUBLIC=your-public-bucket-name

# Object Storage - Custom Endpoint (for MinIO, R2, etc.)
# OBJECT_STORAGE__ENDPOINT_URL=https://your-s3-compatible-endpoint.com
# OBJECT_STORAGE__CUSTOM_DOMAIN=assets.yourdomain.com

# Object Storage - Advanced Settings
# OBJECT_STORAGE__USE_SSL=true
# OBJECT_STORAGE__MAX_FILE_SIZE=209715200
# OBJECT_STORAGE__MULTIPART_THRESHOLD=67108864

# 3D Generation Services
THREED_GENERATION__MESHY_API_KEY=your-meshy-api-key
THREED_GENERATION__KAEDIM_API_KEY=your-kaedim-api-key

# Database Configuration
DATABASE__URL=postgresql://user:password@localhost:5432/ai_3d_assets

# Security Configuration
SECURITY__SECRET_KEY=your-super-secret-key-at-least-32-characters-long

# Gradio Configuration
GRADIO__HOST=127.0.0.1
GRADIO__PORT=7860
GRADIO__SHARE=false

# Logging Configuration
LOGGING__LEVEL=DEBUG
LOGGING__FILE_PATH=./logs/app.log

# Application Settings
APP_NAME=AI 3D Asset Generator
APP_VERSION=0.1.0
TEMP_DIR=./temp/ai-3d-assets
MAX_CONCURRENT_GENERATIONS=3

# Optional: Override specific settings
# LLM__MAX_TOKENS=4096
# LLM__TEMPERATURE=0.8
# CLOUD_STORAGE__MAX_FILE_SIZE=209715200
# THREED_GENERATION__QUALITY_PRESET=high
# GRADIO__THEME=soft
